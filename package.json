{
  "name": "devtoberfest",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",  
  "dependencies": {
    "@sap/audit-logging": "^5.5.3",
    "@sap/cds": "5.9.3",
    "@sap/cds-odata-v2-adapter-proxy": "^1.8.16",
    "@sap/xsenv": "^3.2.2",
    "@sap/xssec": "^3.2.13",
    "applicationinsights": "^2.3.2",
    "cds-pg": "0.1.28",
    "copyfiles": "^2.4.1",
    "express": "^4.18.1",
    "passport": "^0.5.2",
    "pg": "^8.7.3"
  },
  "devDependencies": {
    "mbt": "~1.2.1",
    "@sap/ux-specification": "^1.100.1",
    "cds-dbm": "^0.0.36",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "jest": "^28.0.3",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "start": "cds run",
    "start:docker": "docker-compose up"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "build": {
      "tasks": [
        {
          "for": "node-cf",
          "src": "srv",
          "options": {
            "model": [
              "db",
              "srv"
            ]
          }
        },
        {
          "use": "cds-dbm/dist/build/postgres-cf",
          "for": "postgres-cf",
          "src": "db",
          "options": {
            "deployCmd": "npx cds-dbm deploy --load-via delta --auto-undeploy"
          }
        }
      ]
    },
    "requires": {
      "db": {
        "kind": "database"
      },
      "auth": {
        "[heroku]": {
          "impl": "./heroku/mock-auth-handler.js"
        }
      },
      "database": {
        "dialect": "plain",
        "impl": "cds-pg",
        "model": [
          "srv"
        ],
        "credentials": {
          "[heroku]": {
            "ssl": {
              "rejectUnauthorized": false
            }
          }
        }
      },
      "uaa": {
        "[heroku]": {},
        "kind": "xsuaa"
      }
    },
    "migrations": {
      "db": {
        "schema": {
          "default": "public",
          "clone": "_cdsdbm_clone",
          "reference": "_cdsdbm_ref"
        },
        "deploy": {
          "tmpFile": "tmp/_autodeploy.json",
          "undeployFile": "db/undeploy.json"
        }
      }
    }
  }
}
